<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Roles</h2>
    <ol class="breadcrumb">
      <li>
        <a href="#">Settings</a>
      </li>
      <li>
        <a href="#">Users & Accounts</a>
      </li>
      <li class="active">
        <strong>Roles</strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-8">
    <div class="title-action">
    <% if policy(Role).new? %>
      <%= link_to 'New Role', new_role_path, :class => "btn btn-primary"%>
    <% end %>
    </div>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="ibox float-e-margins">
    <div class="ibox-content">

      <table class="table table-striped">
        <thead>
          <tr>
                        <th>Name</th>
                        <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @roles.each do |role| %>
          <tr>
                        <td><%= role.name
              %></td>
                        <td>
              <% if policy(Role).edit? %>
                <%= link_to 'Edit', edit_role_path(role) %> &middot;
              <% end %>
              <% if policy(Role).destroy? %>
                <%= link_to 'Delete', role, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
