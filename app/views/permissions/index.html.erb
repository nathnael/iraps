<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Permissions</h2>
    <ol class="breadcrumb">
      <li>
        <a href="#">Lookups</a>
      </li>
      <li class="active">
        <strong>Permissions</strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-8">
    <div class="title-action">
    <% if policy(Permission).new? %>
      <%= link_to 'New Permission', new_permission_path, :class => "btn btn-primary"%>
    <% end %>
    </div>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="ibox float-e-margins">
    <div class="ibox-content">

      <table class="table table-striped">
        <thead>
          <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @permissions.each do |permission| %>
          <tr>
                        <td><%= permission.name
              %></td>
                        <td><%= permission.description
              %></td>
                        <td>
              <% if policy(Permission).edit? %>
                <%= link_to 'Edit', edit_permission_path(permission) %> &middot;
              <% end %>
              <% if policy(Permission).destroy? %>
                <%= link_to 'Delete', permission, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
