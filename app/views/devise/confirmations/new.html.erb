<div class="login-form">
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-sm-4">
            <h2 class="heading-secondary ma-bt-lg">Resend confirmation instructions</h2>
        </div>
    </div>            
    <div class="wrapper wrapper-content">
        <div class="ibox-content">                              
            <%= form_for(resource, as: resource_name, url: session_path(resource_name),:html=> {class:'form form--login'}) do |f| %>
                <%= devise_error_messages! %>
                <div class="form__group">
                    <%= f.label :email_address, class: 'form__label' %><br/>
                    <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form__input" %>
                </div>
        
                <br />
                <div class="form__group">
                    <%= f.submit "Resend confirmation instructions", class: "btn btn--green" %>
                </div>
                <br />
            <% end %>

            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>
