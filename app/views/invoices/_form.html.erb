                        </div>

                <div class="form-group">
                            <%= f.label :submitted_by %>
                <%= f.text_area :submitted_by, :class => 'form-control' %>
                        </div>

                <div class="form-group">
                            <%= f.label :deleted_at %>
                <%= f.datetime_select :deleted_at, :class => 'form-control' %>
                        </div>

      
      <div class="actions">
        <%= f.submit :class => 'btn btn-primary' %>
      </div>
  <% end %>

    </div>
  </div>
</div>