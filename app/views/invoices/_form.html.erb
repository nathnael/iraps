<div class="wrapper wrapper-content">
  <div class="ibox float-e-margins">
    <div class="ibox-content">
      <%= form_for(invoice) do |f| %>
        <% if invoice.errors.any? %>
          <div class="panel panel-danger">
            <div class="panel-heading">
              <%= pluralize(invoice.errors.count, "error") %> prohibited this invoice from being saved.
            </div>

            <div class="panel-body">
              <ul>
                <% invoice.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

                <div class="form-group">
                            <%= f.label :vendor_id %>
                <%= f.number_field :vendor_id, :class => 'form-control' %>
                        </div>

                <div class="form-group">
                            <%= f.label :received_date %>
                <%= f.datetime_select :received_date, :class => 'form-control' %>
                        </div>

                <div class="form-group">
                            <%= f.label :received_from %>
                <%= f.number_field :received_from, :class => 'form-control' %>
                        </div>

                <div class="form-group">
                            <%= f.label :invoice_number %>
                <%= f.text_area :invoice_number, :class => 'form-control' %>
                        </div>

                <div class="form-group">
                            <%= f.label :invoice_date %>
                <%= f.datetime_select :invoice_date, :class => 'form-control' %>
                        </div>

                <div class="form-group">
                            <%= f.label :currency_type %>
                <%= f.number_field :currency_type, :class => 'form-control' %>
                        </div>

                <div class="form-group">
                            <%= f.label :amount %>
                <%= f.text_field :amount, :class => 'form-control' %>
                        </div>

                <div class="form-group">
                            <%= f.label :waybill_number %>
                <%= f.text_area :waybill_number, :class => 'form-control' %>
                        </div>

                <div class="form-group">
                            <%= f.label :lti_number %>
                <%= f.text_area :lti_number, :class => 'form-control' %>
